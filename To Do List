// Problems in your To Do List
import java.util.*;
public class ToDoList {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();

        int n = sc.nextInt();
        int arr[] = new int[n];

        int count = 0;
        for(int j=0; j<n; j++){
            arr[j] = sc.nextInt();
            if(arr[j] >= 1000){
                count++;
            }
        }
        System.out.println(count);
    }
}
